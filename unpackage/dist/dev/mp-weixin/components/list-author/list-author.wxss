.list-author {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10px 0;
  margin: 0 15px;
  border-radius: 5px;
  box-sizing: border-box;
  border-bottom: 1px #f5f5f5 solid;
}
.list-author .list-author_image {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 40px;
  height: 40px;
  overflow: hidden;
}
.list-author .list-author_image image {
  height: 100%;
  width: 100%;
}
.list-author .list-author_content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding-left: 10px;
  width: 100%;
}
.list-author .list-author_content .list-author_title {
  position: relative;
  padding-right: 30px;
  font-size: 14px;
  color: #333;
  font-weight: bold;
  line-height: 1.2;
}
