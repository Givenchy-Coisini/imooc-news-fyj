          flex: 1;
  box-sizing: border-box;
}
.follow .follow-tab {
  height: 30px;
  padding: 10px 20px;
  border-bottom: 1px #f5f5f5 solid;
}
.follow .follow-tab .follow-tab_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  border: 1px #f07373 solid;
}
.follow .follow-tab .follow-tab_box .follow-tab-item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #666;
}
.follow .follow-tab .follow-tab_box .follow-tab-item:first-child {
  border-right: 1px #f07373 solid;
}
.follow .follow-tab .follow-tab_box .follow-tab-item.active {
  color: #f07373;
}
.follow .follow-list {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.follow .follow-list .follow-list_swiper {
  height: 100%;
}
.follow .follow-list .follow-list_swiper .swiper-item {
  height: 100%;
}
